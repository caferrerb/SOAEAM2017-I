<section class="panel product-section">
    <div class="panel-heading heading-position-right">
        <a class="btn btn-default options-btn" href="/ProductGrid">
            <i class="fa fa-th-large" aria-hidden="true"></i>
        </a>
        <a class="btn btn-default options-btn options-btn-active" href="/ProductList">
            <i class="fa fa-th-list" aria-hidden="true"></i>
        </a>
    </div>
    <!--cual es el que rtecorre el carrito?-->
    <div  class="panel-body product-section-list"  ng-controller="CtlProducto">
        <div  class="product-section-list">
            <article class="product-item-list" ng-repeat="obj in carrito" ng-model="carrito">
                <div class="product-item-hidden-list">
                    <a class="separator" href="/detalle">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </a>                    
                </div>
                <button class="btn btn-warning"  ng-click="deleteTrolley(obj)">quitar</button>
                <div class="product-item-header-list" style="width: 45%;">
                    <img src="{[{obj.obj.product.image.large}]}" alt="">                    
                </div>                
                <div class="product-item-header">
                    <h4 >{[{obj.obj.product.description.title}]}</h4>
                </div>

                <div class="product-item-price">
                    <strong style="width: 55px">{[{obj.obj.product.price.price}]}</strong>
                </div>
                <div class="product-item-content">                    
                    <label>{[{obj.obj.product.description.name}]}</</label>
                    <p>{[{obj.obj.product.description.description}]}</p>
                </div>
            </article>
        </div>
    </div>
    
    <!---CODIGO PARA LA VENTANA DE PAGAR PRODUCTOS-->



<div class="product-item-content-list"> 
<button type="button" class="btn btn-info" ng-click="" data-toggle="modal" data-target="#myModal">Realizar el pago</button>

<!-- Modal -->
<div id="myModal" class="modal fade col-lg-12" role="dialog">
<div class="modal-dialog">
<!-- Modal content-->
<div class="modal-content" style="width: 690px;">
<div class="modal-header">
<button type="button" class="close" data-dismiss="modal">&times;</button>
<h4 class="modal-title">Metodos de pago</h4>
</div>
<div class="modal-body row">
<!--------------------------TODO WRITE HERE------------------------------------>
<form method="post" role="form" name="formulario" >
<div class="form-group col-md-7">
<label>
credit card number
</label>
    <input step="any" type="number" class="form-control"
placeholder="credit card number" ng-model="pago.number" required>
</div> 

<div class="form-group col-md-7">
<label>
security code
</label>
<input type="password" class="form-control"
placeholder="security code" ng-model="pago.password" required>
</div> 
    

<div class="form-group col-md-7">
<label>
expiration date
</label>
<input type="date" class="form-control"
ng-model="pago.fecha" required>
</div>
    
    
<div class="form-group col-md-7">
<label>
payment method
</label>
    <select ng-model="pago.metodo" data-ng-options="p as p for p in franquicias"></select>
</div>
    
    

<div class="form-group col-md-7">
<label>
payment country
</label>
<select ng-model="pago.pais" data-ng-options="c as c for c in countries"></select>
</div>    
    
    
<div class="col col-lg-7 ">
<button class="btn btn-primary" type="submit" ng-click="buy()" >
Pagar
</button>
<button class="btn btn-success" type="button" data-dismiss="modal">
Cancelar
</button>
</div>
</form>
<!-------------------------------------------------------------->
</div>

</div>

</div>
</div>
</div>

